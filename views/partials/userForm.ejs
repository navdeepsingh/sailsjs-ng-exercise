<div class="modal fade" tabindex="-1" role="dialog" id="userFormModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <form name="userForm" class="form-horizontal" novalidate>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" ng-model="modal-title">User - Edit</h4>
      </div>
      <div class="modal-body">

        <div class="well bs-component">

            <fieldset>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">First Name</label>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                  <input type="text" class="form-control" name="firstName" id="inputEmail" ng-model="user.firstName" required>
                  <span ng-show='userForm.firstName.$invalid'>Please enter First Name!</span>
                </div>
              </div>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">Last Name</label>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                  <input type="text" class="form-control" name="lastName" id="inputEmail" ng-model="user.lastName" required>
                  <span ng-show='userForm.lastName.$invalid'>Please enter Last Name!</span>
                </div>
              </div>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">Email</label>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                  <input type="email" name="userEmail" class="form-control" id="inputEmail" ng-model="user.email" required>
                  <span ng-show='userForm.userEmail.$invalid'>Please enter Email!</span>
                </div>
              </div>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">Age</label>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                  <input type="text" class="form-control" name="userAge" id="inputEmail" ng-model="user.age" required>
                  <span ng-show='userForm.userAge.$invalid'>Please enter Age</span>
                </div>
              </div>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">Gender</label>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">

                  <div class="radio">
                    <label>
                      <input type="radio" name="optionsRadios" ng-model="user.gender" checked="" required>
                      Male</label>
                  </div>
                  <div class="radio">
                    <label>
                      <input type="radio" name="optionsRadios" ng-model="user.gender" >
                      Female</label>
                  </div>

                </div>
              </div>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">Password</label>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                  <input type="password" class="form-control" name="userPass" id="inputEmail" ng-model="user.password" required>
                  <span ng-show='userForm.userPass.$invalid'>Please enter Password!</span>
                </div>
              </div>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">Confirm Password</label>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                  <input type="password" class="form-control" name="confirmPass" id="inputEmail" ng-model="user.conpassword" required>
                  <span ng-show='userForm.confirmPass.$invalid'>Please enter confirm password!</span>
                </div>
              </div>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">Role</label>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                  <select class="form-control" id="select" required>
                    <option>Administrator</option>
                    <option>Minimal</option>
                  </select>
                </div>
              </div>

            </fieldset>


        </div>



      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary"  ng-click="userForm.$valid && editUser();">Save changes</button>
        <!--button type="submit" class="btn btn-primary"  ng-click="createUser();">Create</button-->
      </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
