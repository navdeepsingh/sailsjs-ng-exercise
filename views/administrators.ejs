<%- partial ('partials/navbar.ejs') %>

<div class="container" ng-controller="userController">
  <div class="row">
    	<div class="col-lg-12">
    		<h2>Administrators CRUD Operations</h2>
    		<hr>

        <div class="ItemList-wrapper">

          <table cellpadding="0" cellspacing="0" class="table table-striped table-hover ">
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Logins</th>
                <th>Roles</th>
                <th>Created At</th>
                <th>Action</th>
              </tr>
            <% for(var i=0; i<administrators.length; i++) { %>
              <tr>
                <td><%= administrators[i].id %></td>
                <td><%= administrators[i].getFullName() %></td>
                <td><%= administrators[i].email %></td>
                <td><%= administrators[i].age %></td>
                <td><%= administrators[i].gender %></td>
                <td><%= administrators[i].logins %></td>
                <td><%= administrators[i].roles %></td>
                <td><%= administrators[i].getCreatedDate() %></td>
                <td><button type="button" class="btn btn-primary" ng-click="editAdminForm('<%= administrators[i].id %>', '<%= administrators[i].roles %>')">Edit</button>
                <button type="button" class="btn btn-danger">Delete</button> </td>
              </tr>
          <% } %>
        </table>
        <button type="button" class="btn btn-primary pull-right" ng-click="createAdminForm()">Add New Admin</button>
        </div>

        <%- partial ('partials/userForm.ejs', {allRoles : allRoles}) %>

    	</div>
  </div>
</div>
