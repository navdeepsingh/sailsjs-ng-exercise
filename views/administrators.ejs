<%- partial ('partials/navbar.ejs') %>

<div class="container" ng-controller="userController">
  <div class="row">
    <div class="col-lg-12">
      <h2>Administrators CRUD Operations</h2>
      <hr>
      <h3><%= user[0].roles %></h3>

      <div class="ItemList-wrapper">

        <table cellpadding="0" cellspacing="0" class="table table-striped table-hover ">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Created At</th>
            <th>Action</th>
          </tr>
          <% for(var i=0; i<administrators.length; i++) {%>
          <tr>
            <td><%= administrators[i].getFullName() %></td>
            <td><%= administrators[i].email %></td>
            <td><%= administrators[i].age %></td>
            <td><%= administrators[i].gender %></td>
            <td><%= administrators[i].createdAt %></td>
            <td><button type="button" class="btn btn-primary">Edit</button>
              <button type="button" class="btn btn-danger" ng-model="remove-item" ng-click="removeList()">Delete</button> </td>
          </tr>
          <% } %>
        </table>

      </div>



    </div>
  </div>
</div>
